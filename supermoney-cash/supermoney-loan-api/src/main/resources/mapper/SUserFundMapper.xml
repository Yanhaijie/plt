            </if>
            <if test="workAmount != null">
                work_amount = work_amount - #{workAmount},
            </if>
            <if test="rechargeAmount != null">
                recharge_amount = recharge_amount - #{rechargeAmount},
            </if>
            <if test="cashAmount != null">
                cash_amount = cash_amount - #{cashAmount},
            </if>
            <if test="updateTime != null">
                update_time= #{updateTime}
            </if>
            <if test="opt!=null">
                opt=#{opt}
            </if>
        </set>
        where 1=1
        <if test="userId != null">
            and user_id #{userId}
        </if>
    </update>

    <insert id="addUserFund" parameterType="com.supermoney.loan.api.entity.SUserFund">
        INSERT INTO s_user_fund
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="availableAmount != null">
                available_amount,
            </if>
            <if test="freezeAmount != null">
                freeze_amount,
            </if>
            <if test="waitAmount != null">
                wait_amount,
            </if>
            <if test="repaymentedAmount != null">
                repaymented_amount,
            </if>
            <if test="rewardAmount != null">
                reward_amount,
            </if>
            <if test="workAmount != null">
                work_amount,
            </if>
