            </if>
            <if test="workAmount != null">
                #{workAmount},
            </if>
            <if test="rechargeAmount != null">
                #{rechargeAmount},
            </if>
            <if test="cashAmount != null">
                #{cashAmount},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
